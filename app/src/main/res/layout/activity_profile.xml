<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_colour"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableLeft="@drawable/arrow_icon"
                android:drawableTint="@color/light_blue"
                android:gravity="center_horizontal"
                android:text="Lorem ipsum"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/woman_icon"
                app:civ_border_color="@color/light_blue"
                app:civ_border_width="@dimen/_3sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Lorem ipsum"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:elevation="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10sdp">

                <TextView
                    android:id="@+id/txtLorem"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    android:drawableTint="@color/yellow"
                    android:drawablePadding="@dimen/_150sdp"
                    android:drawableRight="@drawable/next_icon"/>

                    <TextView
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ipsum dolor"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:drawablePadding="@dimen/_110sdp"
                        android:drawableTint="@color/yellow"
                        android:drawableRight="@drawable/next_icon"/>

                    <TextView
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sit amet"
                        android:drawablePadding="@dimen/_132sdp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:drawableTint="@color/yellow"
                        android:drawableRight="@drawable/next_icon"/>

                    <TextView
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum"
                        android:drawableTint="@color/yellow"
                        android:textStyle="bold"
                        android:drawablePadding="@dimen/_98sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:drawableRight="@drawable/next_icon"/>

                    <TextView
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dolor sit"
                        android:drawableTint="@color/yellow"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:drawablePadding="@dimen/_130sdp"
                        android:drawableRight="@drawable/next_icon"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/white">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:tint="#C8D5DC"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_18sdp"
            android:src="@drawable/dots_icon" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:tint="#C8D5DC"
            android:layout_margin="@dimen/_18sdp"
            android:src="@drawable/search_icon" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_18sdp"
            android:src="@drawable/user_icon"
            android:tint="@color/light_blue" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:tint="#C8D5DC"
            android:layout_margin="@dimen/_18sdp"
            android:src="@drawable/shopping_icon" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:tint="#C8D5DC"
            android:layout_margin="@dimen/_15sdp"
            android:src="@drawable/setting_icon" />

    </LinearLayout>

</LinearLayout>